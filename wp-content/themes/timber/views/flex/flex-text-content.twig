<section class="flex-text-content {{ post.section_classes }} {{ flex_id }}" id="{{ item_slug }}">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-6">
                {% if post.section_heading %}
                    <h2 class="section-heading">
                        {{ post.section_heading }}
                    </h2>
                {% endif %}
                {% if post.section_content %}
                    <div class="section-content">
                        {{ post.section_content|wpautop }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>